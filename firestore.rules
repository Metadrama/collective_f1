rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User profile documents
    // Location: /users/{userId}
    match /users/{userId} {
      // Users can read and write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Journal entries
    // Location: /users/{userId}/entries/{entryId}
    match /users/{userId}/entries/{entryId} {
      // Allow read if:
      // 1. User is authenticated
      // 2. User is accessing their own entries
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow create if:
      // 1. User is authenticated
      // 2. User is creating in their own collection
      // 3. Entry has required fields
      allow create: if request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.data.text is string
                    && request.resource.data.timestamp is string;
      
      // Allow update if:
      // 1. User is authenticated
      // 2. User is updating their own entry
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // Allow delete if:
      // 1. User is authenticated
      // 2. User is deleting their own entry
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
